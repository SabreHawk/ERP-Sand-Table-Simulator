<Page
    x:Class="App3.Inventory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="Assets/dabeijin3.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Grid Grid.Column="0" Margin="20,20,20,20">
            <Grid.Background>
                <ImageBrush ImageSource="Assets/xiaobeijin.png"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <RelativePanel Grid.Row="1" Grid.Column="0">
                <TextBlock RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="5,5,5,0" Foreground="White">产品库存</TextBlock>
            </RelativePanel>
            <RelativePanel Grid.Row="2" Grid.Column="0">
                <Button x:ConnectionId='24' Name="query1"                      RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="5,5,5,0" Foreground="White">查询</Button>
                <TextBox x:ConnectionId='25' Name="yuanliao1" RelativePanel.LeftOf="query1" RelativePanel.AlignBottomWith="query1"  Foreground="White"/>
                <TextBlock x:ConnectionId='26' Name="yuanliao1_value" RelativePanel.RightOf="query1" RelativePanel.AlignBottomWith="query1"   Foreground="White"/>
            </RelativePanel>
            <RelativePanel Grid.Row="3" Grid.Column="0">
                <Button x:ConnectionId='21' Name="query2"                      RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="5,5,5,0" Foreground="White">查询</Button>
                <TextBox x:ConnectionId='22' Name="yuanliao2" RelativePanel.LeftOf="query2" RelativePanel.AlignBottomWith="query2" Foreground="White"/>
                <TextBlock x:ConnectionId='23' Name="yuanliao2_value" RelativePanel.RightOf="query2"  RelativePanel.AlignBottomWith="query2" Foreground="White"/>
            </RelativePanel>
            <RelativePanel Grid.Row="4" Grid.Column="0">
                <Button x:ConnectionId='18' Name="query3"                      RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="5,5,5,0" Foreground="White">查询</Button>
                <TextBox x:ConnectionId='19' Name="yuanliao3" RelativePanel.LeftOf="query3" RelativePanel.AlignBottomWith="query3" Foreground="White"/>
                <TextBlock x:ConnectionId='20' Name="yuanliao3_value" RelativePanel.RightOf="query3" RelativePanel.AlignBottomWith="query3" Foreground="White"/>
            </RelativePanel>

            <Grid Grid.Row="6" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:ConnectionId='16' Name="id" Grid.Column="1" Text="产品id" Height="20" Margin="5,5,5,5" Foreground="White"/>
                <TextBox x:ConnectionId='17' Name="num" Grid.Column="2" Text="库存" Height="20" Margin="5,5,5,5" Foreground="White"/>
            </Grid>
            <RelativePanel Grid.Row="7" Grid.Column="0">
                <Button x:ConnectionId='15' Name="Add"
                        FontSize="20"
                        Content="更新产品库存信息"
                                          RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="5,5,5,5" Foreground="White"/>
            </RelativePanel>
            <RelativePanel Grid.Row="8" Grid.Column="0">
                <TextBlock x:ConnectionId='14' Name="backvalue_11" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True"></TextBlock>
            </RelativePanel>
        </Grid>
        
        
        


        <Grid Grid.Column="1" Margin="20,20,20,20">
            <Grid.Background>
                <ImageBrush ImageSource="Assets/xiaobeijin.png"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <RelativePanel Grid.Row="1" Grid.Column="1">
                <TextBlock RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="5,5,5,0" Foreground="White">原料库存</TextBlock>
            </RelativePanel>
            <RelativePanel Grid.Row="2" Grid.Column="1">
                <Button x:ConnectionId='11' Name="query_1"                       RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="5,5,5,0" Foreground="White">查询</Button>
                <TextBox x:ConnectionId='12' Name="yuanliao_1" RelativePanel.LeftOf="query_1" RelativePanel.AlignBottomWith="query_1"  Foreground="White"/>
                <TextBlock x:ConnectionId='13' Name="yuanliao_1_value" RelativePanel.RightOf="query_1" RelativePanel.AlignBottomWith="query_1"   Foreground="White"/>
            </RelativePanel>
            <RelativePanel Grid.Row="3" Grid.Column="1">
                <Button x:ConnectionId='8' Name="query_2"                       RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="5,5,5,0" Foreground="White">查询</Button>
                <TextBox x:ConnectionId='9' Name="yuanliao_2" RelativePanel.LeftOf="query_2" RelativePanel.AlignBottomWith="query_2" Foreground="White"/>
                <TextBlock x:ConnectionId='10' Name="yuanliao_2_value" RelativePanel.RightOf="query_2"  RelativePanel.AlignBottomWith="query_2" Foreground="White"/>
            </RelativePanel>
            <RelativePanel Grid.Row="4" Grid.Column="1">
                <Button x:ConnectionId='5' Name="query_3"                       RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="5,5,5,0" Foreground="White">查询</Button>
                <TextBox x:ConnectionId='6' Name="yuanliao_3" RelativePanel.LeftOf="query_3" RelativePanel.AlignBottomWith="query_3" Foreground="White"/>
                <TextBlock x:ConnectionId='7' Name="yuanliao_3_value" RelativePanel.RightOf="query_3" RelativePanel.AlignBottomWith="query_3" Foreground="White"/>
            </RelativePanel>

            <Grid Grid.Row="6" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:ConnectionId='3' Name="id_" Grid.Column="1" Text="产品id_" Height="20" Margin="5,5,5,5" Foreground="White"/>
                <TextBox x:ConnectionId='4' Name="num_" Grid.Column="2" Text="库存_" Height="20" Margin="5,5,5,5" Foreground="White"/>
            </Grid>
            <RelativePanel Grid.Row="7" Grid.Column="1">
                <Button x:ConnectionId='2' Name="Add_"
                    FontSize="20"
                    Content="更新原料库存信息"
                                       RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="5,5,5,5" Foreground="White"/>
            </RelativePanel>
            <RelativePanel Grid.Row="8" Grid.Column="1">
                <TextBlock x:ConnectionId='1' Name="backvalue_12" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Foreground="White"></TextBlock>
            </RelativePanel>
        </Grid>


    </Grid>
</Page>

