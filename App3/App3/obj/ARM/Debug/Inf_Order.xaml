<Page
    x:Class="App3.Inf_Order"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="Assets/dabeijin.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0">
            <TextBlock FontSize="24">原料订单信息查询</TextBlock>
            <TextBlock>请输入订单编号：</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBox x:ConnectionId='29' Name="Order_num"/>
                <Button x:ConnectionId='30' Name="Chaxun"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="20"
                        Content="&#xE001;"
                                            />
            </StackPanel>

            <TextBlock x:ConnectionId='14' Name="back_value"></TextBlock>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='27' Name="id" Text="订单编号："/>
                <TextBlock x:ConnectionId='28' Name="id_value"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='25' Name="name" Text="订单名称："/>
                <TextBlock x:ConnectionId='26' Name="name_value"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='23' Name="yuanliaoid" Text="原料编号："/>
                <TextBlock x:ConnectionId='24' Name="yuanliaoid_value"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='21' Name="shulang" Text="数量："/>
                <TextBlock x:ConnectionId='22' Name="shuangliang_value"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='19' Name="jiaohuoshijian" Text="交货日期："/>
                <TextBlock x:ConnectionId='20' Name="jiaohuoshijian_value"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='17' Name="dindanriqi" Text="订单日期："/>
                <TextBlock x:ConnectionId='18' Name="dindanriqi_value"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='15' Name="chanshenriqi" Text="产生日期："/>
                <TextBlock x:ConnectionId='16' Name="chanshenriqi_value"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock FontSize="24">产品订单信息查询</TextBlock>
            <TextBlock>请输入订单编号：</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBox x:ConnectionId='12' Name="Order_num1"/>
                <Button x:ConnectionId='13' Name="Chaxun1"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="20"
                        Content="&#xE001;"
                                             />
            </StackPanel>

            <TextBlock x:ConnectionId='1' Name="back_value_"></TextBlock>

            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='10' Name="id_" Text="订单编号："/>
                <TextBlock x:ConnectionId='11' Name="id_value_"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='8' Name="name_" Text="订单名称："/>
                <TextBlock x:ConnectionId='9' Name="name_value_"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='6' Name="yuanliaoid_" Text="原料编号："/>
                <TextBlock x:ConnectionId='7' Name="yuanliaoid_value_"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='4' Name="shulang_" Text="数量："/>
                <TextBlock x:ConnectionId='5' Name="shuangliang_value_"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='2' Name="jiaohuoshijian_" Text="交货日期："/>
                <TextBlock x:ConnectionId='3' Name="jiaohuoshijian_value_"/>
            </StackPanel>


        </StackPanel>


    </Grid>
</Page>

